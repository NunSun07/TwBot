# Twitch IRC (для підключення бота)
TWITCH_OAUTH_TOKEN=your_twitch_oauth_token      # OAuth токен бота
TWITCH_BOT_NICK=your_bot_nickname              # Ім'я бота в чаті
TWITCH_CHANNEL=your_channel_name               # Канал без #

# FACEIT
FACEIT_API_KEY=your_faceit_api_key             # API ключ FACEIT
FACEIT_NICK=your_faceit_nickname               # Нік для статистики FACEIT

# Twitch API для перевірки стріму та отримання App Token
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_APP_TOKEN=your_twitch_app_token        # Можна залишити пустим, бот генерує автоматично
